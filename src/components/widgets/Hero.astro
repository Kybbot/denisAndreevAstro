---
import Contacts from "../entities/Contacts.astro";
import SocialIcons from "../entities/SocialIcons.astro";

import Header from "../features/Header.astro";

import { getLangFromUrl, useTranslations } from "../../assets/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="hero">
	<div class="hero__bg">
		<div class="hero__bg-1"></div>
		<div class="hero__bg-2"></div>
	</div>
	<!-- HEADER -->
	<Header />

	<!-- HERO CONTENT -->
	<div class="container">
		<div class="hero__container">
			<div class="hero__socials">
				<SocialIcons className="hero__social" />
			</div>
			<div class="hero__picture">
				<picture>
					<source srcset="/imgs/1.webp 1x, /imgs/1@2x.webp 2x" type="image/webp" />
					<img
						class="hero__img"
						width="460"
						height="645"
						src="/imgs/1.png"
						srcset="/imgs/1@2x.png 2x"
						alt="Denis Andreev"
						aria-hidden="true"
					/>
				</picture>
				<div class="hero__gradient"></div>
			</div>
			<div class="hero__wrapper">
				<div class="hero__info">
					<h2 class="hero__title">
						<span class="hero__title--span">{t("hero.title1")}</span><span class="hero__title--span"
							>{t("hero.title2")}</span
						><span class="hero__title--span">{t("hero.title3")}</span><span class="hero__title--span"
							>{t("hero.title4")}</span
						><span class="hero__title--span">{t("hero.title5")}</span>
						<span class="hero__title--span">{t("hero.title6")}</span><span class="hero__title--span"
							>{t("hero.title7")}</span
						><span class="hero__title--span">{t("hero.title8")}</span><span class="hero__title--span"
							>{t("hero.title9")}</span
						><span class="hero__title--span">{t("hero.title10")}</span><span class="hero__title--span"
							>{t("hero.title11")}</span
						><span class="hero__title--span">{t("hero.title12")}</span>
					</h2>
					<p class="hero__description">{t("hero.description1")} <br /> {t("hero.description2")}</p>
					<div class="hero__line"></div>
					<div class="hero__icon">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M13.5894 15L4.98242 6.393L6.39642 4.979L15.0034 13.586L15.0034 6L17.0034 6L17.0034 17L6.00342 17L6.00342 15L13.5884 15L13.5894 15Z"
								fill="url(#paint0_linear_105_1974)"
								stroke="black"
								stroke-width="0.7"></path>
							<defs>
								<linearGradient
									id="paint0_linear_105_1974"
									x1="7.49945"
									y1="9.49999"
									x2="17.1607"
									y2="7.16798"
									gradientUnits="userSpaceOnUse"
								>
									<stop offset="0" stop-color="white"></stop>
									<stop offset="1" stop-color="#9F9F9F"></stop>
								</linearGradient>
							</defs>
						</svg>
					</div>
					<p class="hero__about">{t("hero.about")}</p>
				</div>
				<div class="hero__contacts">
					<Contacts />
				</div>
			</div>
		</div>
	</div>
</div>
